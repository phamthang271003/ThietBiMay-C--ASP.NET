@model IEnumerable<Đồ_án_lập_trình_web.Models.New>

@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý tin tức</h2>

<a class="btn btn-primary mb-3" href="/Admin/News/Create">Thêm tin tức</a>

<table class="table table-bordered ">
    <tr>
        <th>
            STT
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Tiêu đề
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Thứ tự
        </th>
        <th>

        </th>
    </tr>

    @if (Model != null && Model.Any())
    {
        var i = 1;
        foreach (var item in Model)
        {
            <tr id="trow_@item.Id">
                <td>@i </td>
                <td>@item.Image </td>
                <td>@item.Title </td>
                <td>@item.CreateDate.ToString("dd/MM/yyyy") </td>
                <td>
                    <a href="/Admin/New/Edit/@item.Id" class="btn btn-primary">Sửa</a>
                    <a class="btn btn-danger" onclick="DeleteNew(@item.Id)" href="#">Xóa</a>
                </td>
            </tr>
            i++;
        }
    }
    else
    {
        <tr>
            <td colspan="5">Không có bản ghi nào!!!</td>
        </tr>
    }
</table>
@section script
{
    <script>
        var DeleteNew = function (id) {
            if (confirm("Bạn có chắc chắn muốn xóa hay không?") == true) {
                location.href = 'DeleteNew?id=' + id
            }
        }
    </script>
}